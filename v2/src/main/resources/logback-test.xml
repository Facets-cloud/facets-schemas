<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <logger name="com.capillary" level="INFO"/>

    <appender name="DEPLOYER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="DEPLOYER" level="ERROR" />
    </root>

</configuration>

<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <logger name="org" level="ERROR"/>
    <logger name="io" level="ERROR"/>
    <logger name="com" level="ERROR"/>
    <logger name="springfox" level="ERROR"/>
    <logger name="com.capillary" level="INFO"/>

    <appender name="DEPLOYER" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                <prettyPrint>false</prettyPrint>
            </jsonFormatter>
            <timestampFormat>yyyy-MM-dd' 'HH:mm:ss.SSS</timestampFormat>
            <appendLineSeparator>true</appendLineSeparator>
        </layout>
    </appender>

    <appender name="FORENSIC" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                <prettyPrint>false</prettyPrint>
            </jsonFormatter>
            <timestampFormat>yyyy-MM-dd' 'HH:mm:ss.SSS</timestampFormat>
            <appendLineSeparator>true</appendLineSeparator>
        </layout>
    </appender>

    <logger name="FORENSIC-LOGGER" level="INFO">
        <appender-ref ref="FORENSIC" />
    </logger>

    <root>
        <appender-ref ref="DEPLOYER" level="INFO" />
    </root>

</configuration>
